  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Path\**" />
    <Compile Remove="Resolution\**" />
    <EmbeddedResource Remove="Path\**" />
    <EmbeddedResource Remove="Resolution\**" />
    <None Remove="Path\**" />
    <None Remove="Resolution\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\LionFire.Structures\LionFire.Structures.csproj" />
  </ItemGroup>

</Project>
