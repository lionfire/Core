	  <PackageReference Include="Serilog.Sinks.Debug" />
	  <PackageReference Include="Serilog.Settings.Configuration" />
	  <PackageReference Include="Serilog.Sinks.File.Archive" />
	  <PackageReference Include="Serilog.Sinks.File.GZip" />
	  <PackageReference Include="Serilog.Sinks.Grafana.Loki" />
	  <PackageReference Include="Serilog.Sinks.OpenTelemetry" />
	  <!--<PackageReference Include="Serilog.Sinks.Http" />-->
	  <PackageReference Include="SerilogTraceListener" />
	  <PackageReference Include="System.CommandLine" />
	  <PackageReference Include="System.CommandLine.Hosting" />
	  <PackageReference Include="System.CommandLine.NamingConventionBinder" />
	
  </ItemGroup>

