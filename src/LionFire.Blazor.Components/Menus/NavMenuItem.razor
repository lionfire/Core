@inject LionFire.Referencing.IUrlProvider UrlProvider

<li class="nav-item px-3" >
	<NavLink class="nav-link" href="@UrlProvider.GetUrl(Href)" Match="NavLinkMatch.All">
		@*<span class="oi oi-list-rich" aria-hidden="true"></span>*@ @ChildContent
	</NavLink>
</li>

@code {
	[Parameter]
	public object Href { get; set; }

	[Parameter]
	public RenderFragment ChildContent { get; set; }
}
