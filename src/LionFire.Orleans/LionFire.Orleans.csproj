    </PackageReference>
    <PackageReference Include="Microsoft.Orleans.Server" Version="3.5.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Licensing\LionFire.Orleans.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
