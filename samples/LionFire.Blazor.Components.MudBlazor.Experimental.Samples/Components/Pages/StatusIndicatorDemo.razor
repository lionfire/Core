@code {
    private UserProjectStatus currentProjectStatus = UserProjectStatus.Active;
    private TaskState currentTaskState = TaskState.Ready;

    private void CycleProjectStatus()
    {
        currentProjectStatus = currentProjectStatus switch
        {
            UserProjectStatus.Active => UserProjectStatus.Warning,
            UserProjectStatus.Warning => UserProjectStatus.Error,
            UserProjectStatus.Error => UserProjectStatus.Idle,
            UserProjectStatus.Idle => UserProjectStatus.Completed,
            UserProjectStatus.Completed => UserProjectStatus.Active,
            _ => UserProjectStatus.Active
        };
    }

    private void CycleTaskState()
    {
        currentTaskState = currentTaskState switch
        {
            TaskState.Ready => TaskState.Running,
            TaskState.Running => TaskState.Active,
            TaskState.Active => TaskState.Waiting,
            TaskState.Waiting => TaskState.Blocked,
            TaskState.Blocked => TaskState.Closed,
            TaskState.Closed => TaskState.Deferred,
            TaskState.Deferred => TaskState.DeferredBecauseBlocked,
            TaskState.DeferredBecauseBlocked => TaskState.Backburner,
            TaskState.Backburner => TaskState.Reviewable,
            TaskState.Reviewable => TaskState.Ready,
            _ => TaskState.Ready
        };
    }
}
